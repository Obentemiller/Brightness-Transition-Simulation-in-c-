#include <iostream>
#include <conio.h>
#include <string>
#include <random>
#include <chrono>

////////////////////////////////////////////////////////////////////////////////
void randowblimp(int ini, int fim, int probabilityOfStar) {
    std::random_device rd;
    std::mt19937 gen(rd());
    std::uniform_int_distribution<> distrib(ini, fim);

    for (int i = ini; i <= fim; i++) {
        if (distrib(gen) <= probabilityOfStar) {
            std::cout << "*";
        }
        else {
            std::cout << " ";
        }
    }
    std::cout << std::endl;
}

static void brightness_transition(int speed) {
    int i = 0;
    while (i != 100) {
        i += speed;
        randowblimp(0, 100, i);
        std::chrono::seconds(0);
    }

    while (i != 0) {
        i -= speed;
        randowblimp(0, 100, i);
        std::chrono::seconds(0);
    }
}
////////////////////////////////////////////////////////////////////////////////

int main(){
    brightness_transition(2);
    
}


